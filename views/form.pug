extends layout

block content

  a(href='/' class='redirect btn back') GO BACK
  h1= title

  form(method='POST' action='/new' id='new-message')
    fieldset
      legend Create a new message
      txt Your name
      input(type='text' name='name' class='name-field')/
      br
      txt Your message
      textarea(name='message' rows='4' cols='50' form='new-message' class='message-field')
      br
      button(class='btn new') SUBMIT
